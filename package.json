{
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build:site:js": "node build.mjs site",
    "build:site:css": "tailwindcss -i src/app.css -o public/app.css --minify",
    "build:site": "pnpm run build:site:js && pnpm run build:site:css",
    "build:dist:js": "node build.mjs dist",
    "build:dist:css": "tailwindcss -i src/app.css -o dist/app.css --minify",
    "build:dist": "pnpm run build:dist:js && pnpm run build:dist:css",
    "build": "pnpm run build:site && pnpm run build:dist"
  },
  "devDependencies": {
    "@ruby/3.4-wasm-wasi": "2.8.1",
    "@ruby/wasm-wasi": "2.8.1",
    "@tailwindcss/cli": "^4.1.18",
    "esbuild": "^0.24.0",
    "plotly.js-dist-min": "2.35.0",
    "tailwindcss": "^4.1.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@parcel/watcher"
    ]
  }
}
