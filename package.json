{
  "private": true,
  "scripts": {
    "build:site:js": "node build.mjs site",
    "build:site:css": "sass src/app.scss public/app.css --style=compressed --no-source-map",
    "build:site": "pnpm run build:site:js && pnpm run build:site:css",
    "build:dist": "node build.mjs dist",
    "build": "pnpm run build:site && pnpm run build:dist"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "sass": "^1.80.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@parcel/watcher"
    ]
  }
}
