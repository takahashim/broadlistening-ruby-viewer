{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "js",
    "rootDir": "ts",
    "declaration": false,
    "noEmit": true
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}
